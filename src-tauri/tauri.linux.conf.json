{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Berry Dash Launcher",
  "version": "1.1.0",
  "identifier": "xyz.lncvrt.berrydash-launcher",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Berry Dash Launcher",
        "width": 1000,
        "height": 600,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
